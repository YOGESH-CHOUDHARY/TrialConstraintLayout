<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".2" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".1"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".8" />

    <TextView
        android:id="@+id/tv_upload_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/guideline5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Uploads"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_1_upload"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_upload_new"
        app:layout_constraintRight_toRightOf="@+id/guideline6"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        android:layout_marginTop="20dp"
        android:text="Select ID Type"/>


    <EditText
        android:id="@+id/et_2_upload"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_1_upload"
        app:layout_constraintRight_toRightOf="@+id/guideline6"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        android:layout_marginTop="20dp"
        android:text="Enter ID Number"/>
    
    <ImageView
        android:id="@+id/image_new_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/et_2_upload"
        app:layout_constraintRight_toRightOf="@+id/guideline6"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        android:src="@drawable/logo_z_zebi"/>

    <ImageView
        android:id="@+id/image_new_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/image_new_1"
        app:layout_constraintRight_toRightOf="@+id/guideline6"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        android:src="@drawable/logo_z_zebi"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/image_new_2"
        app:layout_constraintRight_toRightOf="@+id/guideline6"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        android:layout_marginTop="20dp"
        android:text="BUTTON"/>








</android.support.constraint.ConstraintLayout>