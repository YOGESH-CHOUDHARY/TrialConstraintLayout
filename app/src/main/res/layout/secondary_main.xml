<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.SearchView
        android:id="@+id/searchview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/img_price"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/searchview"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:src="@drawable/image_icon_advice_price"
        android:layout_margin="15dp"/>

    <ImageView
        android:id="@+id/img_quantity"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/searchview"
        app:layout_constraintLeft_toRightOf="@+id/img_price"
        android:src="@drawable/image_icon_advice_quantity"
        android:layout_margin="15dp"/>

    <ImageView
        android:id="@+id/img_symbol"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/searchview"
        app:layout_constraintRight_toLeftOf="@+id/img_price"
        android:src="@drawable/image_icon_advice_symbol"
        android:layout_margin="15dp"/>

    <TextView
        android:id="@+id/text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/img_price"
        android:text="Price"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_margin="18dp"/>

    <TextView
        android:id="@+id/text_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/img_quantity"
        app:layout_constraintLeft_toRightOf="@+id/img_price"
        android:text="Quantity"
        android:layout_margin="18dp"/>

    <TextView
        android:id="@+id/text_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/img_symbol"
        app:layout_constraintRight_toLeftOf="@+id/img_price"
        android:text="Symbol"
        android:layout_margin="18dp"/>

    <WebView
        android:id="@+id/webview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/text_symbol"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_margin="10dp" />

    <EditText
        android:id="@+id/et_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/text_symbol"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"/>


    <Button
        android:id="@+id/submitbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:textColor="@color/purewhite"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:background="@color/design_default_color_primary"
        app:layout_constraintTop_toBottomOf="@+id/webview"
        android:layout_marginTop="10dp" />


</android.support.constraint.ConstraintLayout>